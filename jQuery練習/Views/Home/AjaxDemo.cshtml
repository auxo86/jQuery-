
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AjaxDemo</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div>
        <div id="result">
        </div>
    </div>
    <script>
        $(function () {
            $.ajax({
                type: "POST",
                //call webservice
                url: "/CustomerInfo.asmx/GetCustomer",
                data: '{"id":123}',
                //給json
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    $("#result").text(
                        data.d.CustomerId + "," + data.d.Name);
                }
            });
        })
    </script>
</body>
</html>
